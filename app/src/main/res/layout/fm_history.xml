<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeef"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:paddingBottom="13dp"
        android:paddingLeft="3dp"
        android:paddingRight="13dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_f"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_f"
            android:layout_toEndOf="@+id/imageView_f"
            android:layout_toRightOf="@+id/imageView_f"
            android:ellipsize="end"
            android:maxLines="20"
            android:singleLine="true"
            android:text="@string/cs1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/f_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_author_name"
            android:layout_alignBottom="@+id/textView_author_name"
            android:layout_toEndOf="@+id/textView_author_name"
            android:layout_toLeftOf="@+id/xiangqing1"
            android:layout_toRightOf="@+id/textView_author_name"
            android:ellipsize="end"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="@string/cs2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_f"
            android:layout_toEndOf="@+id/imageView_f"
            android:layout_toRightOf="@+id/imageView_f"
            android:text="@string/cs3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/xiangqing1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/f_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/assistor121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/xiangqing2"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/f_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/assistor121"
            android:textSize="16sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-19dp"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@android:color/white"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/errorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_errorType"
                android:layout_alignBottom="@+id/tv_errorType"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@android:drawable/presence_online"
                android:padding="3dp"
                android:text="@string/leixing"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/errorType"
                android:drawableLeft="@android:drawable/presence_online"
                android:padding="3dp"
                android:text="@string/quyu"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area"
                android:drawableLeft="@android:drawable/presence_online"
                android:padding="3dp"
                android:text="@string/shebei"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/errorTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView11"
                android:drawableLeft="@android:drawable/presence_online"
                android:padding="3dp"
                android:text="@string/shijian"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/errorContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView19"
                android:drawableLeft="@android:drawable/presence_online"
                android:padding="3dp"
                android:text="@string/jianshu"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_errorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/errorContent"
                android:layout_toRightOf="@+id/errorContent"
                android:padding="3dp"
                android:text="@string/anquan"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_errorType"
                android:layout_alignStart="@+id/tv_errorType"
                android:layout_below="@+id/tv_errorType"
                android:padding="3dp"
                android:text="@string/ranliao"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_area"
                android:layout_alignStart="@+id/tv_area"
                android:layout_below="@+id/textView7"
                android:padding="3dp"
                android:text="@string/cs5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_errorTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_toEndOf="@+id/errorContent"
                android:layout_toRightOf="@+id/errorContent"
                android:padding="3dp"
                android:text="@string/cs6"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_errorContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_errorTime"
                android:layout_toEndOf="@+id/errorContent"
                android:layout_toRightOf="@+id/errorContent"
                android:padding="3dp"
                android:text="@string/cs7"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_errorType"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#EEEEEF" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_area"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#EEEEEF" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_factory"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#EEEEEF" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_errorTime"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#EEEEEF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_errorTime"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#EEEEEF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:src="@drawable/lj" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/lj" />
        </RelativeLayout>
    </FrameLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/pen"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:textColorHint="#AAAAAA"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_tv_n"
        android:text="@string/affirm"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>